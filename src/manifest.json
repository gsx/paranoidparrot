{
  "manifest_version": 2,

  "name": "Paranoid Parrot",
  "description": "This extension securely loads signed resources (such as HTML, JS, CSS, images) from a web server.",
  "version": "1.0",
  "background": { "scripts": ["background.js"] },
  "sandbox": {
    "pages": ["loader.html"]
  },
  "permissions": [
    "____URL____"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
